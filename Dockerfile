FROM nginx:latest

# 暴露 80 端口
EXPOSE 80

# 设置工作目录
WORKDIR /app

# 创建非 root 用户
RUN useradd -r -u 1001 -g nginx app-user

# 复制配置文件
COPY nginx.conf /etc/nginx/nginx.conf
COPY entrypoint.sh ./

# 安装依赖并下载 v2ray
RUN apt-get update && apt-get install -y wget unzip iproute2 && \
    wget -O temp.zip $(wget -qO- "https://api.github.com/repos/v2fly/v2ray-core/releases/latest" | grep -m1 -o "https.*linux-64.*zip") && \
    unzip temp.zip v2ray geoip.dat geosite.dat && \
    mv v2ray v && \
    rm -f temp.zip && \
    chmod -v 755 v entrypoint.sh && \
    echo '' > config

# 修改文件和目录权限
RUN chown -R app-user:nginx /app /var/log/nginx /var/cache/nginx /var/run /etc/nginx

# 以非 root 用户运行
USER app-user

# 设置入口点
ENTRYPOINT [ "./entrypoint.sh" ]
